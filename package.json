{
  "name": "mprettier",
  "main": "./lib/main",
  "version": "0.2.0",
  "description": "Minimal prettier, always invoked manually, no linter integration, no Atom startup overhead",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/t9md/atom-mprettier",
  "engines": {
    "atom": "^1.15.0"
  },
  "configSchema": {
    "usePrettierInCurrentFileDirectory": {
      "order": 0,
      "type": "boolean",
      "default": true
    },
    "usePrettierInCurrentProject": {
      "order": 1,
      "type": "boolean",
      "default": true
    },
    "usePrettierInAbsolutePath": {
      "order": 2,
      "type": "boolean",
      "default": false
    },
    "prettierInAbsolutePath": {
      "order": 3,
      "type": "string",
      "default": "/usr/local/lib/node_modules/prettier/index.js"
    },
    "usePrettierGloballyInstalled": {
      "order": 4,
      "type": "boolean",
      "default": false
    },
    "usePrettierBundled": {
      "order": 5,
      "type": "boolean",
      "default": true
    },
    "javascriptParser": {
      "title": "JavaScript Parser",
      "order": 6,
      "type": "string",
      "default": "babylon",
      "enum": [
        "babylon",
        "flow"
      ]
    },
    "scopesForParser": {
      "type": "object",
      "collapsed": false,
      "properties": {
        "javascript": {
          "order": 0,
          "title": "javascript",
          "description": "Parser you chose in `JavaScript Parser` is used",
          "type": "array",
          "default": [
            "source.js",
            "source.jsx",
            "source.js.jsx",
            "source.babel",
            "source.js-semantic",
            "text.html.basic",
            "text.html.vue"
          ],
          "items": {
            "type": "string"
          }
        },
        "typescript": {
          "order": 1,
          "title": "typescript",
          "type": "array",
          "default": [
            "source.ts",
            "source.tsx",
            "source.ts.tsx"
          ],
          "items": {
            "type": "string"
          }
        },
        "postcss": {
          "order": 2,
          "title": "postcss",
          "type": "array",
          "default": [
            "source.css",
            "source.less",
            "source.css.less",
            "source.scss",
            "source.css.scss",
            "source.css.postcss"
          ],
          "items": {
            "type": "string"
          }
        },
        "json": {
          "order": 3,
          "title": "json",
          "type": "array",
          "default": [
            "source.json"
          ],
          "items": {
            "type": "string"
          }
        },
        "graphql": {
          "order": 4,
          "title": "graphql",
          "type": "array",
          "default": [
            "source.graphql"
          ],
          "items": {
            "type": "string"
          }
        },
        "markdown": {
          "order": 5,
          "title": "markdown",
          "type": "array",
          "default": [
            "source.gfm",
            "text.md"
          ],
          "items": {
            "type": "string"
          }
        }
      }
    },
    "notificationMethodOnPrettierError": {
      "order": 7,
      "type": "string",
      "default": "atom-notification",
      "enum": [
        "atom-notification",
        "console"
      ]
    },
    "debug": {
      "order": 8,
      "type": "boolean",
      "default": false
    }
  },
  "activationCommands": {
    "atom-workspace": [
      "mprettier:format"
    ]
  },
  "dependencies": {
    "fs-plus": "^3.0.1",
    "prettier": "^1.8.2"
  }
}
