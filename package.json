{
  "name": "mprettier",
  "main": "./lib/main",
  "version": "0.1.0",
  "description": "Minimal prettier, always invoked manually, no linter integration, no Atom startup overhead",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/t9md/atom-mprettier",
  "engines": {
    "atom": "^1.15.0"
  },
  "configSchema": {
    "usePrettierInCurrentFileDir": {
      "order": 0,
      "type": "boolean",
      "default": true
    },
    "usePrettierInCurrentProject": {
      "order": 1,
      "type": "boolean",
      "default": true
    },
    "usePrettierInAbsolutePath": {
      "order": 2,
      "type": "boolean",
      "default": false
    },
    "prettierInAbsolutePath": {
      "order": 3,
      "type": "string",
      "default": "/usr/local/lib/node_modules/prettier/index.js"
    },
    "usePrettierGloballyInstalled": {
      "order": 4,
      "type": "boolean",
      "default": false
    },
    "usePrettierBundled": {
      "order": 5,
      "type": "boolean",
      "default": true
    },
    "javascriptParser": {
      "order": 6,
      "type": "string",
      "default": "babylon",
      "enum": [
        "babylon",
        "flow"
      ]
    },
    "notificationMethodOnPrettierError": {
      "order": 7,
      "type": "string",
      "default": "atom-notification",
      "enum": [
        "atom-notification",
        "console"
      ]
    },
    "debug": {
      "order": 8,
      "type": "boolean",
      "default": false
    }
  },
  "activationCommands": {
    "atom-workspace": [
      "mprettier:format"
    ]
  },
  "dependencies": {
    "fs-plus": "^3.0.1",
    "prettier": "^1.8.2"
  }
}
