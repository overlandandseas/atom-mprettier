{
  "name": "mprettier",
  "main": "./lib/main",
  "version": "0.5.0",
  "description": "Minimalistic prettier runner for more performant Atom startup",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/t9md/atom-mprettier",
  "engines": {
    "atom": "^1.15.0"
  },
  "configSchema": {
    "javascriptParser": {
      "title": "JavaScript Parser",
      "order": 1,
      "type": "string",
      "default": "babylon",
      "enum": [
        "babylon",
        "flow"
      ]
    },
    "notificationMethodOnPrettierError": {
      "order": 2,
      "type": "string",
      "default": "atom-notification",
      "enum": [
        "atom-notification",
        "console"
      ]
    },
    "debug": {
      "order": 3,
      "type": "boolean",
      "default": false
    },
    "formatOnSave": {
      "order": 4,
      "type": "object",
      "collapsed": true,
      "properties": {
        "enable": {
          "title": "Enable",
          "order": 1,
          "description": "works only for **active** editor",
          "type": "boolean",
          "default": false
        },
        "skipWhenPrettierIsNotProjectDependencies": {
          "title": "Skip When Prettier Is Not Project Dependencies",
          "order": 2,
          "type": "boolean",
          "default": false
        },
        "skipWhenPrettierConfigIsNotFound": {
          "title": "Skip When Prettier Config Is Not Found",
          "order": 3,
          "type": "boolean",
          "default": false
        },
        "disabledParsers": {
          "title": "Disabled Parsers",
          "order": 4,
          "description": "Put parser names here e.g. `markdown, postcss`",
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          }
        }
      }
    },
    "prettierToUseInOrder": {
      "order": 5,
      "type": "object",
      "collapsed": true,
      "properties": {
        "inCurrentFileDirectory": {
          "title": "1. In Current File Directory",
          "order": 1,
          "type": "boolean",
          "default": false
        },
        "inCurrentProject": {
          "title": "2. In Current Project",
          "order": 2,
          "type": "boolean",
          "default": true
        },
        "inAbsolutePath": {
          "title": "3. In Absolute Path",
          "order": 3,
          "type": "boolean",
          "default": false
        },
        "prettierPath": {
          "title": "Prettier Path",
          "order": 4,
          "type": "string",
          "default": "/usr/local/lib/node_modules/prettier/index.js"
        },
        "globallyInstalled": {
          "title": "4. Globally Installed",
          "order": 5,
          "type": "boolean",
          "default": false
        },
        "bundled": {
          "title": "5. Bundled in mprettier",
          "order": 6,
          "type": "boolean",
          "default": true
        }
      }
    },
    "scopesForParser": {
      "order": 6,
      "type": "object",
      "collapsed": true,
      "properties": {
        "javascript": {
          "order": 0,
          "title": "javascript",
          "description": "Parser you chose in `JavaScript Parser` is used",
          "type": "array",
          "default": [
            "source.js",
            "source.jsx",
            "source.js.jsx",
            "source.babel",
            "source.js-semantic",
            "text.html.basic",
            "text.html.vue"
          ],
          "items": {
            "type": "string"
          }
        },
        "typescript": {
          "order": 1,
          "title": "typescript",
          "type": "array",
          "default": [
            "source.ts",
            "source.tsx",
            "source.ts.tsx"
          ],
          "items": {
            "type": "string"
          }
        },
        "postcss": {
          "order": 2,
          "title": "postcss",
          "type": "array",
          "default": [
            "source.css",
            "source.less",
            "source.css.less",
            "source.scss",
            "source.css.scss",
            "source.css.postcss"
          ],
          "items": {
            "type": "string"
          }
        },
        "json": {
          "order": 3,
          "title": "json",
          "type": "array",
          "default": [
            "source.json"
          ],
          "items": {
            "type": "string"
          }
        },
        "graphql": {
          "order": 4,
          "title": "graphql",
          "type": "array",
          "default": [
            "source.graphql"
          ],
          "items": {
            "type": "string"
          }
        },
        "markdown": {
          "order": 5,
          "title": "markdown",
          "type": "array",
          "default": [
            "source.gfm",
            "text.md"
          ],
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "dependencies": {
    "fs-plus": "^3.0.1",
    "prettier": "^1.8.2",
    "read-pkg-up": "^3.0.0"
  }
}
